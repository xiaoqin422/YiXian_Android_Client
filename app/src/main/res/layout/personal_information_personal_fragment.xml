<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/statistical_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:fontFamily="@font/ziti"
                android:text="杀敌数"
                android:textColor="#492D55"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:fontFamily="@font/ziti"
                android:text="战斗场次"
                android:textColor="#492D55"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:fontFamily="@font/ziti"
                android:text="死亡数"
                android:textColor="#492D55"
                android:textSize="20sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/kills_text"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="数值"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="胜率"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="170dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="胜率"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/editTextNumberPassword4"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="numberPassword" />

            <EditText
                android:id="@+id/editTextNumberPassword5"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="numberPassword" />

            <EditText
                android:id="@+id/editTextNumberPassword6"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="numberPassword" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>